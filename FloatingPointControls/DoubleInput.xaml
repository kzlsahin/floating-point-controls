<UserControl x:Class=" FloatingPointControls.DoubleInput"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="120">
    <TextBox 
        x:Name="textBox" 
        PreviewTextInput="NumericTextBox_PreviewTextInput" 
        BorderBrush="{x:Null}" 
        Background="White" 
        TextChanged="NumericTextBox_TextChanged"
        Style="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=Style}"
        VerticalAlignment="Center"
        PreviewMouseLeftButtonDown="TextBox_MouseLeftDown"/>
</UserControl>
